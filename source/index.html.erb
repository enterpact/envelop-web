<% content_for(:navbar) do %>
  <%= partial(:navbar, locals: { hide_shadow: true }) %>
<% end %>

<section class="ev-index__section">
  <div class="ev-index__section-cell ev-index__section-cell--image">
    <img src="/images/Placeholder-web-landing.png" draggable="false"/>
  </div>
  <div class="ev-index__section-cell ev-index__section-cell--text">
    <div>Share private files easily,<br>without losing their ownership</div>
    <button class="js-login-btn ev-index__sign-in-btn hide">Sign In</button>
    <button class="js-go-to-app-btn ev-index__go-to-app-btn hide">Open App</button>
  </div>
</section>

<section class="ev-index__section ev-index__section--reverse">
  <div class="ev-index__section-cell ev-index__section-cell--text ev-index__section-cell--text-right">
    Upload a file,<br>
    get a download link,<br>
    and share it<br>
    <br>
    Try it right now!
  </div>
  <div class="ev-index__section-cell ev-index__section-cell--image">
    <label class="ev-index__upload-label" htmlFor="index-file-upload">
      <img src="/images/card-upload.svg" draggable="false"/>
      <input
        class="ev-index__upload-input js-upload-input"
        id="index-file-upload"
        type="file"
        name="file-upload"
        multiple
        />
    </label>
  </div>
</section>

<section class="ev-index__section" id="homepage-extensions">
  <div class="ev-index__section-cell-full">
    <p class="ev-index__section-cell--text">Browser Extensions</p><br/>
    <p class="ev-index__section-cell--text ev-index__section-cell--text-small">
      Use Envelop without losing your flow.
    </p><br/>
  </div>
  <div class="ev-index__section-cell-third">
    <a href="https://addons.mozilla.org/en-US/firefox/addon/envelop/" target="_blank" class="ev-index__extension-link">
      <div class="ev-index__extension">
        <img src="/images/firefox.svg" class="ev-index__extension-logo"/>
        <p class="ev-index__extension-name">Firefox</p>
      </div>
    </a>
  </div>
  <div class="ev-index__section-cell-third">
    <a href="https://addons.opera.com/extensions/details/envelop/" target="_blank" class="ev-index__extension-link">
      <div class="ev-index__extension">
        <img src="/images/opera.svg" class="ev-index__extension-logo"/>
        <p class="ev-index__extension-name">Opera</p>
      </div>
    </a>
  </div>
</section>

<section class="ev-index__section">
  <div class="ev-index__section-cell ev-index__section-cell--image">
    <img src="/images/graphic-lock.svg" draggable="false"/>
  </div>
  <div class="ev-index__section-cell ev-index__section-cell--text">
    <div>
      Envelop runs on <a href="https://blockstack.org">blockstack</a>.<br>
      You decide where your files are stored.
    </div>
    <br>
    <div class="ev-index__section-cell--text-small">
      Use the default storage or <a href="https://docs.blockstack.org/storage/hub-choice.html" target="_blank">setup your own storage</a>.
      With no file limits and no tracking.
    </div>
  </div>
</section>

<div class="js-homepage-uploader-container"></div>
